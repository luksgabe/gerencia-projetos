@model Projeto_Academico.Models.ViewModels.CadastroInicialViewModel

@{
    Layout = "~/Views/Shared/Inicio_Master.cshtml";
    ViewBag.Title = "Cadastro Inicial";
}

<!-- Top content -->

<div class="container auth">
    <h1 class="text-center">
        Uma nova forma de organizar seus projetos
        <span>Conte-nos mais sobre você!</span>
    </h1>
    <div id="big-form" class="well auth-box">
        @using (Html.BeginForm("Cadastro", "Inicio", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <!-- Form Name -->
                @*<legend>Nice form example</legend>*@

                @*<div class="btn-group">
                        <a href="index.html" class="btn btn-default">All</a>
                        <a href="example1.html" class="btn btn-default">example 1</a>
                        <a href="example2.html" class="btn btn-default">example 2</a>
                    </div>*@


                <!-- Text input-->
                <div class="form-group">
                    <div class="">
                        @Html.TextBoxFor(m => m.Nome, new { placeholder = "Nome", @class = "form-control input-md", @id = "txtNome" })
                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.TextBoxFor(m => m.Apelido, new { placeholder = "Apelido", @class = "form-control input-md", @id = "txtApelido" })
                        @Html.ValidationMessageFor(m => m.Apelido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.TextBoxFor(m => m.Empresa, new { placeholder = "Nome da Empresa", @class = "form-control input-md", @id = "txtEmpresa", })
                        @Html.ValidationMessageFor(m => m.Empresa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "E-mail", @class = "form-control input-md", @id = "txtEmail" })
                        @Html.ValidationMessageFor(m => m.Apelido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.PasswordFor(m => m.Senha, new { placeholder = "Senha", @class = "form-control input-md", @id = "txtSenha" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.PasswordFor(m => m.ConfirmarSenha, new { placeholder = "Confirmar senha", @class = "form-control input-md", @id = "txtSenhaConfirm" })
                        @Html.ValidationMessageFor(m => m.ConfirmarSenha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", @id = "form-login" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <label class="control-label" for="singlebutton">Pronto para começar?</label>
                    <div class="">
                        <input type="submit" class="btn btn-default" value="Entrar" />
                    </div>
                </div>

            </fieldset>
        }
    </div>
    <div class="clearfix"></div>
</div>

@section Scripts {
    <script type="text/javascript" language="javascript">

        $(function () {

            var convidado = "@ViewBag.convidado";
            
            if (convidado == "True") {
                $("#txtEmpresa").prop("readonly", true);
            } else {
                $("#txtEmpresa").prop("readonly", false);
            }

        });
    </script>
}

